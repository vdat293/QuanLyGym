<Window x:Class="QuanLyPhongGym.Views.AddMemberDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:QuanLyPhongGym.ViewModels"
        xmlns:utils="clr-namespace:QuanLyPhongGym.Utils"
        Title="Thêm hội viên mới"
        Width="550"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <utils:RadioButtonConverter x:Key="RadioButtonConverter"/>
        <Style TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="0,5,20,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Thông tin hội viên"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <!-- Form Fields -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Họ -->
                <TextBlock Text="Họ *"/>
                <TextBox Text="{Binding FamilyName, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Tên đệm -->
                <TextBlock Text="Tên đệm" Margin="0,10,0,0"/>
                <TextBox Text="{Binding MiddleName, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Tên -->
                <TextBlock Text="Tên *" Margin="0,10,0,0"/>
                <TextBox Text="{Binding GivenName, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- CCCD -->
                <TextBlock Text="Căn cước công dân (CCCD)" Margin="0,10,0,0"/>
                <TextBox Text="{Binding CCCD, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="12"/>

                <!-- Số điện thoại -->
                <TextBlock Text="Số điện thoại" Margin="0,10,0,0"/>
                <TextBox Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}"
                         MaxLength="20"/>

                <!-- Ngày sinh -->
                <TextBlock Text="Ngày sinh" Margin="0,10,0,0"/>
                <DatePicker SelectedDate="{Binding BirthDate}"/>

                <!-- Gói tập -->
                <TextBlock Text="Gói tập *" Margin="0,10,0,0"/>
                <ComboBox ItemsSource="{Binding AvailablePlans}"
                          SelectedItem="{Binding SelectedPlan}"
                          DisplayMemberPath="Name"/>

                <!-- Số tháng (hiển thị từ gói đã chọn) -->
                <TextBlock Text="Thời hạn" Margin="0,10,0,0"/>
                <TextBlock Text="{Binding DurationMonths}"
                           FontWeight="Normal"
                           FontSize="14"
                           Foreground="DarkBlue"
                           Margin="0,5,0,5"/>

                <!-- Trạng thái PT -->
                <TextBlock Text="Huấn luyện viên (HLV)" Margin="0,10,0,0"/>
                <StackPanel Orientation="Vertical" Margin="0,5,0,5">
                    <RadioButton Content="Không có PT"
                                 IsChecked="{Binding PtStatusIndex, Converter={StaticResource RadioButtonConverter}, ConverterParameter=0}"/>
                    <RadioButton Content="Có PT (nội bộ)"
                                 IsChecked="{Binding PtStatusIndex, Converter={StaticResource RadioButtonConverter}, ConverterParameter=1}"/>
                    <RadioButton Content="PT ngoài (không tính lương)"
                                 IsChecked="{Binding PtStatusIndex, Converter={StaticResource RadioButtonConverter}, ConverterParameter=2}"/>
                </StackPanel>

                <TextBlock Text="* Trường bắt buộc"
                           FontWeight="Normal"
                           FontSize="11"
                           Foreground="Gray"
                           Margin="0,15,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Lưu"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="SaveButton_Click"/>
            <Button Content="Hủy"
                    Width="100"
                    Height="35"
                    Background="#FFCCCCCC"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
