<Window x:Class="QuanLyPhongGym.Views.MemberFormDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm hội viên mới"
        Width="550"
        Height="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Thông tin hội viên"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"
                   HorizontalAlignment="Center"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Họ *" FontWeight="SemiBold"/>
                <TextBox Text="{Binding FamilyName}" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Tên đệm" FontWeight="SemiBold"/>
                <TextBox Text="{Binding MiddleName}" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Tên *" FontWeight="SemiBold"/>
                <TextBox Text="{Binding GivenName}" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Số điện thoại" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Phone}" Height="30" Margin="0,5,0,10" MaxLength="20"/>

                <TextBlock Text="Ngày sinh" FontWeight="SemiBold"/>
                <DatePicker SelectedDate="{Binding BirthDate}" Height="30" Margin="0,5,0,10"/>

                <TextBlock Text="Gói tập *" FontWeight="SemiBold"/>
                <ComboBox ItemsSource="{Binding AvailablePlans}"
                          SelectedItem="{Binding SelectedPlan}"
                          DisplayMemberPath="Name"
                          Height="30"
                          Margin="0,5,0,10"/>

                <TextBlock Text="Thời hạn" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding DurationMonths}"
                           FontSize="14"
                           Foreground="DarkBlue"
                           Margin="0,5,0,10"/>

                <TextBlock Text="Huấn luyện viên (HLV)" FontWeight="SemiBold"/>
                <ComboBox SelectedIndex="{Binding PtStatusIndex}" Height="30" Margin="0,5,0,10">
                    <ComboBoxItem Content="Không có PT"/>
                    <ComboBoxItem Content="Có PT (nội bộ)"/>
                    <ComboBoxItem Content="PT ngoài (không tính lương)"/>
                </ComboBox>

                <TextBlock Text="* Trường bắt buộc"
                           FontSize="11"
                           Foreground="Gray"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Lưu"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Background="#FF4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    Click="SaveButton_Click"/>
            <Button Content="Hủy"
                    Width="100"
                    Height="35"
                    Background="#FFCCCCCC"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
