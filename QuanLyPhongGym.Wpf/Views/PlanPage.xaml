<Page x:Class="QuanLyPhongGym.Views.PlanPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:QuanLyPhongGym.ViewModels">
    <Page.DataContext>
        <vm:MainViewModel/>
    </Page.DataContext>

    <!-- Chỉ còn DataGrid, không có toolbar và form chi tiết -->
    <Grid Margin="8">
        <DataGrid ItemsSource="{Binding Plans.Items}"
              SelectedItem="{Binding Plans.Selected}"
              AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                <DataGridTextColumn Header="Tên gói" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Giá" Binding="{Binding Price, StringFormat={}{0:N0}}" Width="140"/>
                <!-- MỚI: Số lượng hội viên đang dùng gói -->
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Members.Count}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
